@{
    ViewData["Title"] = "User Login";
}
<div class="purchase-login">
    <div class="col-xs-10 col-sm-7 col-md-5 col-lg-5 form-login">
        @*<div class="logo">
            <p>Logo will be here.</p>
        </div>*@
        <div class="login-panel">
            <div class="panel panel-login">
                <div class="panel-body">
                    <div class="row">
                        <div class="hidden-xs hidden-sm col-md-4 col-lg-4">
                            <div class="login-key-icon">
                                <img class="img-responsive" src="~/images/login-key.png" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                            <h3>User Login</h3>
                            <form>
                                <div class="form-group">
                                    <input type="text" name="userName" id="username-input" placeholder="User Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password-input" placeholder="Password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-submit">Login</button>
                                </div>
                                <div class="form-group">
                                    <a href="" class="small">Forgot password?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
