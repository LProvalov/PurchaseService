@model PurchaseService.Models.Register

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    <div class="text-danger">
        
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-submit" />
        </div>
    </div>
</form>
